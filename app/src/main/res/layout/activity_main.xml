<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mahdi.smartenvironnement.MainActivity"
    android:weightSum="1"
    android:background="@drawable/ff">

    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#90909090"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/separator1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:padding="16dp"
        android:background="#64f94545"
        android:layout_gravity="right"
        android:weightSum="1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="51dp"
            android:src="@drawable/temperature"
            android:layout_weight="0.13" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="182dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:text="Température"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:layout_weight="0.39" />

        <TextView
            android:id="@+id/val_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="right" />


    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#90909090"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/separator3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="16dp"
        android:background="#815acfc7"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="43dp"
            android:src="@drawable/humidity"
            android:layout_weight="0.09" />

        <TextView
            android:id="@+id/humidite"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Humidité"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="0.63"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/val_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="" />
    </LinearLayout>

    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#905a5858"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/separator2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:background="#3D989797"
        android:weightSum="1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="39dp"
            android:src="@drawable/air_conditioner"
            android:layout_weight="0.26" />

        <TextView
            android:id="@+id/air"
            android:layout_width="196dp"
            android:layout_height="42dp"
            android:text="Qualité d'air"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/val_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="" />

    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/graph" />
</LinearLayout>


